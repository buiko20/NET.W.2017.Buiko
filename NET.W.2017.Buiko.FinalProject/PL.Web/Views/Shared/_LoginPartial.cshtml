@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @{
                    if (User.IsInRole("admin"))
                    {
                        @Html.ActionLink(User.Identity.Name, "UsersInfo", "Bank", routeValues: null, htmlAttributes: new { title = "Manage" })
                    }
                    else
                    {
                        @Html.ActionLink(User.Identity.Name, "Home", "Bank", routeValues: null, htmlAttributes: new { title = "Manage" })
                    }
                }
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
