<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
    <target name="console" xsi:type="ColoredConsole" layout="${date:format=HH\:mm\:ss}|${level}|${stacktrace}|${message}" />
    <target name="consolelogfile" xsi:type="File" fileName="console_log_file.txt" />
    <target name="logiclogfile" xsi:type="File" fileName="logic_log_file.txt" />
  </targets>

  <rules>
    <logger name="ConsoleUI*" minlevel="Info" writeTo="consolelogfile" />
    <logger name="ConsoleUI*" minlevel="Info" writeTo="console" /> 
    <logger name="Logic*" minlevel="Info" writeTo="logiclogfile" />
  </rules>

</nlog>